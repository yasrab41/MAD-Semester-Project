<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrigActivity"
    android:background="#CC0059">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="#CC0059"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:elevation="10dp"
        android:paddingTop="30dp"
        app:cardBackgroundColor="@color/first"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Activate Trigger "
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvPressvolumeKey"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="Press volume button Up for 5 fives to send call and SMS with location to registered Contacts "
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tvor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Or "
                android:textColor="#FFFFFF"
                android:textSize="15sp"
            />

            <TextView
                android:id="@+id/tvShake"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="Shake your phone 3 times to send call and Sms with location"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="CALL"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_alert_btn"
                android:onClick="emergencyCall"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="Sms with location"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/circle_alert_btn"
                android:onClick="emergencySmsLoc"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:text="Sms"
                android:gravity="center"
                android:background="@drawable/circle_alert_btn"
                android:onClick="emergencySms"
                />

            </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>